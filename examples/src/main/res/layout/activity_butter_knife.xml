<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/activity_horizontal_margin"
    tools:context=".activity.ButterKnife">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/bk_txt_hora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            tools:text="bk_txt_hora"/>

        <CheckBox
            android:id="@+id/bk_ckb_oncheckedchanged"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="OnCheckedChanged"/>

        <!--<EditText
            android:id="@+id/bk_edt_oneditoraction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:inputType="text"
            android:hint="OnEditiorAction"/>-->

        <EditText
            android:id="@+id/bk_edt_ontextchanged"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:hint="OnTextChanged"
            android:inputType="text"/>
        
        <EditText
            android:id="@+id/bk_edt_onfocuschange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:hint="OnFocusChange"
            android:inputType="text"/>

        <Button
            android:id="@+id/bk_btn_onlongclick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="OnLongClick"/>

        <Button
            android:id="@+id/bk_btn_onclick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="OnClick"/>

        <View
            android:id="@+id/bk_view_ontouch"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginBottom="8dp"
            android:background="@color/colorAccent"
            />

        <ListView
            android:id="@+id/bk_lst_exemplo"
            android:layout_width="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_height="140dp"/>
    </LinearLayout>


</ScrollView>
